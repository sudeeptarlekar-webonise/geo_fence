.container
  
  %br/
  = form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => "form-signin"}) do |f|
    %h2.form-signin-heading= 'Log In'
    .field
      = f.email_field :email, autofocus: true, :class => "form-control", :placeholder => "Email address"
    .field
      = f.password_field :password, autofocus: false, :class => "form-control", :placeholder => "Password"
    - if devise_mapping.rememberable?
      .field
        = f.check_box :remember_me
        = f.label :remember_me
    .actions
      = f.submit 'Log in', :class => "btn btn-lg btn-primary btn-block"
    = render "devise/shared/links"
